@model RoRepairAdmin.Models.tbl_techanicians

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "tbl_technicians", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>tbl_techanicians</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.technicianid)
    <div class="form-group">
        @Html.Label("Choose City", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Cityid, ViewBag.CityList as SelectList, new { @class = "form-control" })
            
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.technicianname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.technicianname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.technicianname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.technicianaddress, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.technicianaddress, new { htmlAttributes = new { @class = "form-control" }, cols = "55", rows = "5" })
            @Html.ValidationMessageFor(model => model.technicianaddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.technicianavgrating, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.technicianavgrating, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.technicianavgrating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.techniciantotalnorating, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.techniciantotalnorating, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.techniciantotalnorating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.technicianimage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" class="form-control" name="profileimg" value="Upload Profile Image" />
            @Html.ValidationMessageFor(model => model.technicianimage, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
